<%= form_with(model: lista_detalle, class: "contents") do |form| %>
  <% if lista_detalle.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(lista_detalle.errors.count, "error") %> prohibited this lista_detalle from being saved:</h2>

      <ul class="list-disc ml-6">
        <% lista_detalle.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :cantidad %>
    <%= form.number_field :cantidad, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lista_detalle.errors[:cantidad].none?, "border-red-400 focus:outline-red-600": lista_detalle.errors[:cantidad].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :prioridad %>
    <%= form.number_field :prioridad, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lista_detalle.errors[:prioridad].none?, "border-red-400 focus:outline-red-600": lista_detalle.errors[:prioridad].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :lista_compra_id %>
    <%= form.text_field :lista_compra_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lista_detalle.errors[:lista_compra_id].none?, "border-red-400 focus:outline-red-600": lista_detalle.errors[:lista_compra_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :producto_id %>
    <%= form.text_field :producto_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lista_detalle.errors[:producto_id].none?, "border-red-400 focus:outline-red-600": lista_detalle.errors[:producto_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
