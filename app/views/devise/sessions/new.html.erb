<div class="my-10 w-1/2 flex shadow-lg rounded-lg bg-white py-8 px-4 sm:px-6 lg:px-8">
  <div class="w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Welcome Back!
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Log in to find the best deals around.
      </p>
    </div>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
                 html: { class: "mt-8 space-y-6", data: { turbo: true } }) do |f| %>
      
      <div class="rounded-md shadow-sm -space-y-px">
        <div class="mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                placeholder: "Enter your email",
                class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm",
                data: { 
                  controller: "form-validation",
                  action: "input->form-validation#validateEmail"
                } %>
          </div>
          <div class="hidden mt-1 text-sm text-red-600" data-form-validation-target="emailError">
            Please enter a valid email address.
          </div>
        </div>

        <div class="mb-6">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.password_field :password, 
                autocomplete: "current-password",
                placeholder: "Enter your password",
                class: "appearance-none relative block w-full px-3 py-2 pr-10 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm",
                data: { 
                  password_toggle_target: "input",
                  controller: "form-validation",
                  action: "input->form-validation#validatePassword"
                } %>
            <button type="button" 
                    class="absolute inset-y-0 right-0 pr-3 flex items-center"
                    data-action="click->password-toggle#toggle"
                    data-password-toggle-target="button">
              <svg class="h-5 w-5 text-gray-400" 
                   data-password-toggle-target="eyeIcon" 
                   fill="none" 
                   stroke="currentColor" 
                   viewBox="0 0 24 24">
                <path stroke-linecap="round" 
                      stroke-linejoin="round" 
                      stroke-width="2" 
                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" 
                      stroke-linejoin="round" 
                      stroke-width="2" 
                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <svg class="h-5 w-5 text-gray-400 hidden" 
                   data-password-toggle-target="eyeSlashIcon" 
                   fill="none" 
                   stroke="currentColor" 
                   viewBox="0 0 24 24">
                <path stroke-linecap="round" 
                      stroke-linejoin="round" 
                      stroke-width="2" 
                      d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21" />
              </svg>
            </button>
          </div>
          <div class="hidden mt-1 text-sm text-red-600" data-form-validation-target="passwordError">
            Password is required.
          </div>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= f.check_box :remember_me, 
                class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
          </div>

          <div class="text-sm">
            <%= link_to "Forgot Password?", new_password_path(resource_name), 
                class: "font-medium text-green-600 hover:text-green-500" %>
          </div>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log In", 
            class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200",
            data: { 
              disable_with: "Signing in...",
              form_validation_target: "submitButton"
            } %>
      </div>
    <% end %>

    <div class="text-center">
      <p class="text-sm text-gray-600">
        Don't have an account? 
        <%= link_to "Sign Up", new_registration_path(resource_name), 
            class: "font-medium text-green-600 hover:text-green-500" %>
      </p>
    </div>
  </div>
</div>

<style>
  /* Estilos adicionales para mejorar la experiencia */
  .form-error {
    @apply border-red-500 focus:ring-red-500 focus:border-red-500;
  }
  
  .form-success {
    @apply border-green-500 focus:ring-green-500 focus:border-green-500;
  }
  
  /* Animación de carga para el botón */
  .loading {
    @apply opacity-75 cursor-not-allowed;
  }
  
  /* Transiciones suaves */
  .transition-all {
    transition: all 0.2s ease-in-out;
  }
</style>
