<div class="my-10 w-1/2 flex shadow-lg rounded-lg bg-white py-8 px-4 sm:px-6 lg:px-8">
  <div class="w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Create Your Account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Join us to discover amazing deals and save money on your purchases.
      </p>
    </div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
                 html: { class: "mt-8 space-y-6", data: { turbo: true } }) do |f| %>
      
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="rounded-md shadow-sm -space-y-px">
        <div class="mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                placeholder: "Enter your email",
                class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm",
                data: { 
                  controller: "form-validation",
                  action: "input->form-validation#validateEmail"
                } %>
            <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
              </svg>
            </div>
          </div>
          <div class="hidden mt-1 text-sm text-red-600" data-form-validation-target="emailError">
            Please enter a valid email address.
          </div>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
          <div class="relative">
            <%= f.password_field :password, 
                autocomplete: "new-password",
                placeholder: "Enter your password",
                class: "appearance-none relative block w-full px-3 py-2 pr-10 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm",
                data: { 
                  password_toggle_target: "input",
                  password_strength_target: "input",
                  controller: "form-validation password-toggle password-strength",
                  action: "input->form-validation#validatePassword input->password-strength#checkStrength"
                } %>
            <button type="button" 
                    class="absolute inset-y-0 right-0 pr-3 flex items-center"
                    data-action="click->password-toggle#toggle"
                    data-password-toggle-target="button">
              <svg class="h-5 w-5 text-gray-400" 
                   data-password-toggle-target="eyeIcon" 
                   fill="none" 
                   stroke="currentColor" 
                   viewBox="0 0 24 24">
                <path stroke-linecap="round" 
                      stroke-linejoin="round" 
                      stroke-width="2" 
                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" 
                      stroke-linejoin="round" 
                      stroke-width="2" 
                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <svg class="h-5 w-5 text-gray-400 hidden" 
                   data-password-toggle-target="eyeSlashIcon" 
                   fill="none" 
                   stroke="currentColor" 
                   viewBox="0 0 24 24">
                <path stroke-linecap="round" 
                      stroke-linejoin="round" 
                      stroke-width="2" 
                      d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21" />
              </svg>
            </button>
          </div>
          <div class="hidden mt-1 text-sm text-red-600" data-form-validation-target="passwordError">
            Password must be at least <%= @minimum_password_length || 6 %> characters.
          </div>
          <div class="mt-2">
            <div class="w-full bg-gray-200 rounded-full h-1">
              <div class="h-1 rounded transition-all duration-300" data-password-strength-target="meter"></div>
            </div>
            <div class="hidden text-xs mt-1" data-password-strength-target="strength"></div>
          </div>
        </div>

        <div class="mb-6">
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password",
                placeholder: "Confirm your password",
                class: "appearance-none relative block w-full px-3 py-2 pr-10 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm",
                data: { 
                  password_toggle_target: "input",
                  controller: "form-validation password-toggle",
                  action: "input->form-validation#validatePasswordConfirmation"
                } %>
            <button type="button" 
                    class="absolute inset-y-0 right-0 pr-3 flex items-center"
                    data-action="click->password-toggle#toggle"
                    data-password-toggle-target="button">
              <svg class="h-5 w-5 text-gray-400" 
                   data-password-toggle-target="eyeIcon" 
                   fill="none" 
                   stroke="currentColor" 
                   viewBox="0 0 24 24">
                <path stroke-linecap="round" 
                      stroke-linejoin="round" 
                      stroke-width="2" 
                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" 
                      stroke-linejoin="round" 
                      stroke-width="2" 
                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <svg class="h-5 w-5 text-gray-400 hidden" 
                   data-password-toggle-target="eyeSlashIcon" 
                   fill="none" 
                   stroke="currentColor" 
                   viewBox="0 0 24 24">
                <path stroke-linecap="round" 
                      stroke-linejoin="round" 
                      stroke-width="2" 
                      d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21" />
              </svg>
            </button>
          </div>
          <div class="hidden mt-1 text-sm text-red-600" data-form-validation-target="passwordConfirmationError">
            Passwords do not match.
          </div>
        </div>
      </div>

      <div class="flex items-center">
        <input id="terms" type="checkbox" required
               class="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded">
        <label for="terms" class="ml-2 block text-sm text-gray-900">
          I agree to the 
          <a href="#" class="font-medium text-green-600 hover:text-green-500">Terms of Service</a>
          and 
          <a href="#" class="font-medium text-green-600 hover:text-green-500">Privacy Policy</a>
        </label>
      </div>

      <div>
        <%= f.submit "Create Account", 
            class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200",
            data: { 
              disable_with: "Creating account...",
              form_validation_target: "submitButton"
            } %>
      </div>
    <% end %>

    <div class="text-center">
      <p class="text-sm text-gray-600">
        Already have an account? 
        <%= link_to "Log In", new_session_path(resource_name), 
            class: "font-medium text-green-600 hover:text-green-500" %>
      </p>
    </div>
  </div>
</div>

<style>
  /* Estilos específicos para el formulario de registro */
  .password-strength {
    @apply mt-1 text-xs;
  }
  
  .password-strength.weak {
    @apply text-red-600;
  }
  
  .password-strength.medium {
    @apply text-yellow-600;
  }
  
  .password-strength.strong {
    @apply text-green-600;
  }
  
  /* Animación para el checkbox de términos */
  input[type="checkbox"]:checked {
    @apply bg-green-600 border-green-600;
  }
  
  /* Mejoras para campos de confirmación */
  .confirmation-field {
    @apply transition-all duration-200;
  }
  
  .confirmation-field.matching {
    @apply border-green-500 focus:ring-green-500 focus:border-green-500;
  }
  
  .confirmation-field.not-matching {
    @apply border-red-500 focus:ring-red-500 focus:border-red-500;
  }
</style>
