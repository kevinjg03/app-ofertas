<%= form_with(model: comercio, class: "contents") do |form| %>
  <% if comercio.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(comercio.errors.count, "error") %> prohibited this comercio from being saved:</h2>

      <ul class="list-disc ml-6">
        <% comercio.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": comercio.errors[:nombre].none?, "border-red-400 focus:outline-red-600": comercio.errors[:nombre].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :direccion %>
    <%= form.text_field :direccion, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": comercio.errors[:direccion].none?, "border-red-400 focus:outline-red-600": comercio.errors[:direccion].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :latitud %>
    <%= form.text_field :latitud, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": comercio.errors[:latitud].none?, "border-red-400 focus:outline-red-600": comercio.errors[:latitud].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :longitud %>
    <%= form.text_field :longitud, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": comercio.errors[:longitud].none?, "border-red-400 focus:outline-red-600": comercio.errors[:longitud].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
