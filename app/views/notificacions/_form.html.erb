<%= form_with(model: notificacion, class: "contents") do |form| %>
  <% if notificacion.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(notificacion.errors.count, "error") %> prohibited this notificacion from being saved:</h2>

      <ul class="list-disc ml-6">
        <% notificacion.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :tipo_notificacion_id %>
    <%= form.text_field :tipo_notificacion_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": notificacion.errors[:tipo_notificacion_id].none?, "border-red-400 focus:outline-red-600": notificacion.errors[:tipo_notificacion_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :mensaje %>
    <%= form.textarea :mensaje, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": notificacion.errors[:mensaje].none?, "border-red-400 focus:outline-red-600": notificacion.errors[:mensaje].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :fecha_envio %>
    <%= form.datetime_field :fecha_envio, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": notificacion.errors[:fecha_envio].none?, "border-red-400 focus:outline-red-600": notificacion.errors[:fecha_envio].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :estado_leido %>
    <%= form.checkbox :estado_leido, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": notificacion.errors[:estado_leido].none?, "border-red-400 focus:outline-red-600": notificacion.errors[:estado_leido].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :medio %>
    <%= form.text_field :medio, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": notificacion.errors[:medio].none?, "border-red-400 focus:outline-red-600": notificacion.errors[:medio].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :usuario_id %>
    <%= form.text_field :usuario_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": notificacion.errors[:usuario_id].none?, "border-red-400 focus:outline-red-600": notificacion.errors[:usuario_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :producto_id %>
    <%= form.text_field :producto_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": notificacion.errors[:producto_id].none?, "border-red-400 focus:outline-red-600": notificacion.errors[:producto_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
