<% content_for :title, @producto.nombre %>

<div class="min-h-screen bg-gray-50 w-full">
  <!-- Header -->
  <div class="bg-white shadow-sm">
    <div class="mx-auto">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center space-x-4">
          <%= link_to productos_path, class: "text-gray-400 hover:text-gray-600 transition-colors" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          <% end %>
          <h1 class="text-xl font-semibold text-gray-900">Detalles del Producto</h1>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-80 w-1/2">
    <% if notice.present? %>
      <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
        <p class="text-green-800 font-medium"><%= notice %></p>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Product Image Section -->
      <div class="space-y-6">
        <!-- Main Product Image -->
        <div class="relative">
          <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-2xl bg-gradient-to-br from-green-100 to-green-200">
            <div class="flex items-center justify-center h-96">
              <div class="text-center">
                <svg class="w-24 h-24 text-green-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <p class="text-green-600 font-medium text-lg">Imagen del producto</p>
              </div>
            </div>
          </div>
          
          <!-- Discount Badge -->
          <% if @producto.descuento_porcentaje > 0 %>
            <div class="absolute top-4 left-4 bg-white bg-opacity-95 rounded-lg px-4 py-2 shadow-lg">
              <span class="text-green-600 font-bold text-xl"><%= @producto.descuento_porcentaje %>% OFF</span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Product Details Section -->
      <div class="space-y-8">
        <!-- Product Info -->
        <div class="space-y-4 my-4">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @producto.nombre %></h1>
            <p class="text-lg text-gray-600 mb-1"><%= @producto.marca %></p>
            <p class="text-sm text-gray-500"><%= @producto.presentacion %></p>
          </div>
          
          <div class="space-y-3">
            <p class="text-gray-700 leading-relaxed"><%= @producto.descripcion %></p>
            <p class="text-sm text-gray-600">Producto de alta calidad, perfecto para el consumo diario. Rico en nutrientes y con sabor natural.</p>
          </div>
        </div>

        <!-- Product Stats -->
        <div class="grid grid-cols-3 gap-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-500 mb-1">Precio Actual</p>
              <p class="text-4xl font-bold text-green-600">$<%= number_with_precision(@producto.precio_actual, precision: 2) %></p>
            </div>
            <div class="text-right">
              <p class="text-sm text-gray-500">Registrado el</p>
              <p class="text-sm text-gray-600"><%= @producto.registro_precios.order(fecha_registro: :desc).first&.fecha_registro&.strftime("%Y-%m-%d") || "N/A" %></p>
            </div>
          </div>
          <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200 text-center">
            <p class="text-2xl font-bold text-green-600"><%= @producto.registro_precios.count %></p>
            <p class="text-sm text-gray-500">Registros</p>
          </div>
          <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200 text-center">
            <p class="text-2xl font-bold text-blue-600">$<%= number_with_precision(@producto.precio_mas_bajo, precision: 2) %></p>
          <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200 text-center">
            <p class="text-2xl font-bold text-green-600"><%= @producto.registro_precios.count %></p>
            <p class="text-sm text-gray-500">Registros</p>
          </div>
          <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200 text-center">
            <p class="text-2xl font-bold text-blue-600">$<%= number_with_precision(@producto.precio_mas_bajo, precision: 2) %></p>
            <p class="text-sm text-gray-500">Mejor Precio</p>
          </div>
          <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200 text-center">
            <p class="text-2xl font-bold text-orange-600"><%= @producto.tiempo_transcurrido %></p>
            <p class="text-sm text-gray-500">Última Actualización</p>
          </div>
        </div>

        <!-- Price History Chart -->
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 p-4">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Historial de Precios</h3>
          <div class="h-48 bg-gray-50 rounded-lg flex items-end justify-center space-x-2 p-4">
            <% precios_recientes = @producto.registro_precios.order(fecha_registro: :desc).limit(5).reverse %>
            <% if precios_recientes.any? %>
              <% max_precio = precios_recientes.maximum(:precio) %>
              <% min_precio = precios_recientes.minimum(:precio) %>
              <% rango = max_precio - min_precio %>
              <% rango = 1 if rango == 0 %>
              
              <% precios_recientes.each_with_index do |registro, index| %>
                <div class="flex flex-col items-center space-y-2">
                  <div class="w-8 bg-green-600 rounded-t" style="height: <%= ((registro.precio - min_precio) / rango * 100).clamp(10, 100) %>%"></div>
                  <p class="text-xs text-gray-500"><%= registro.fecha_registro.strftime("%b %d") %></p>
                  <p class="text-xs font-medium">$<%= number_with_precision(registro.precio, precision: 2) %></p>
                </div>
              <% end %>
            <% else %>
              <div class="text-center text-gray-500">
                <p>No hay datos de precios disponibles</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Store Information -->
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 p-4">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Información del Comercio</h3>
          <div class="space-y-4">
            <div class="flex items-start space-x-4 mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h4 class="font-semibold text-gray-900"><%= @producto.comercio_principal %></h4>
                <div class="flex items-center space-x-2 mt-1">
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span class="text-sm text-gray-600"><%= @producto.ubicacion_principal %></span>
                </div>
              </div>
            </div>
            
            <!-- Store Image Placeholder -->
            <div class="h-32 bg-gradient-to-br from-blue-100 to-blue-200 rounded-lg flex items-center justify-center">
              <div class="text-center">
                <svg class="w-8 h-8 text-blue-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                <p class="text-blue-600 text-sm">Imagen del comercio</p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 flex justify-center space-x-4">
      <%= link_to "Volver a Productos", productos_path, class: "px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-colors" %>
      <% if usuario_signed_in? && current_usuario&.admin? %>
        <%= link_to "Editar Producto", edit_producto_path(@producto), class: "px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" %>
      <% end %>
    </div>
  </div>
</div>
