<div class="my-4 w-full flex shadow-lg rounded-lg bg-white py-8 px-4 sm:px-6 lg:px-8 flex-row">
  <div class="w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        <%= producto.new_record? ? "Crear Nuevo Producto" : "Editar Producto" %>
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        <%= producto.new_record? ? "Agrega un nuevo producto para compartir ofertas increíbles." : "Actualiza la información del producto." %>
      </p>
    </div>
    
    <%= form_with(model: producto, class: "mt-8 space-y-6", data: { turbo: true, controller: "product-form" }) do |form| %>
      
      <% if producto.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md">
          <h3 class="text-sm font-medium mb-2">
            <%= pluralize(producto.errors.count, "error") %> impidieron guardar este producto:
          </h3>
          <ul class="list-disc ml-6 text-sm">
            <% producto.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="rounded-md shadow-sm -space-y-px">
        <!-- Primera fila: Nombre, Marca, Presentación -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
          <div>
            <%= form.label :nombre, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <%= form.text_field :nombre, 
                  autofocus: true,
                  required: true,
                  placeholder: "Nombre del producto",
                  class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm #{producto.errors[:nombre].any? ? 'border-red-500 focus:ring-red-500 focus:border-red-500' : ''}",
                  data: { 
                    product_form_target: "field",
                    action: "input->product-form#validateField"
                  } %>
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              </div>
            </div>
          </div>

          <div>
            <%= form.label :marca, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <%= form.text_field :marca, 
                  required: true,
                  placeholder: "Marca del producto",
                  class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm #{producto.errors[:marca].any? ? 'border-red-500 focus:ring-red-500 focus:border-red-500' : ''}",
                  data: { 
                    product_form_target: "field",
                    action: "input->product-form#validateField"
                  } %>
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
              </div>
            </div>
          </div>

          <div>
            <%= form.label :presentacion, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <%= form.text_field :presentacion, 
                  required: true,
                  placeholder: "Presentación (ej: 500ml, 1kg, etc.)",
                  class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm #{producto.errors[:presentacion].any? ? 'border-red-500 focus:ring-red-500 focus:border-red-500' : ''}",
                  data: { 
                    product_form_target: "field",
                    action: "input->product-form#validateField blur->product-form#formatPresentation"
                  } %>
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>

        <!-- Segunda fila: Descripción (ancho completo) -->
        <div class="mb-4">
          <%= form.label :descripcion, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= form.text_area :descripcion, 
                rows: 4,
                required: true,
                placeholder: "Describe el producto, sus características y beneficios...",
                class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm resize-none #{producto.errors[:descripcion].any? ? 'border-red-500 focus:ring-red-500 focus:border-red-500' : ''}",
                data: { 
                  product_form_target: "field",
                  action: "input->product-form#validateField input->product-form#resizeTextarea"
                } %>
            <div class="absolute top-3 right-3 flex items-center">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Tercera fila: Categoría (ancho completo) -->
        <div class="mb-6">
          <%= form.label :categoria_id, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= form.select :categoria_id, 
                Categoria.all.map { |cat| [cat.nombre, cat.id] },
                { prompt: "Selecciona una categoría" },
                { 
                  required: true,
                  class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm #{producto.errors[:categoria_id].any? ? 'border-red-500 focus:ring-red-500 focus:border-red-500' : ''}",
                  data: { 
                    product_form_target: "field",
                    action: "change->product-form#validateField"
                  }
                } %>
            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <div class="flex items-center">
        <input id="terms" type="checkbox" required
               class="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded"
               data-product-form-target="termsCheckbox"
               data-action="change->product-form#toggleTerms">
        <label for="terms" class="ml-2 block text-sm text-gray-900">
          Confirmo que la información del producto es correcta y 
          <a href="#" class="font-medium text-green-600 hover:text-green-500">cumple con las políticas</a>
          de la plataforma
        </label>
      </div>

      <div class="flex space-x-4">
        <%= form.submit producto.new_record? ? "Crear Producto" : "Actualizar Producto", 
            class: "flex-1 group relative flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200",
            data: { 
              product_form_target: "submitButton",
              action: "click->product-form#submit",
              loading_text: producto.new_record? ? "Creando producto..." : "Actualizando producto...",
              disable_with: producto.new_record? ? "Creando producto..." : "Actualizando producto..."
            } %>
        
        <%= link_to "Cancelar", productos_path, 
            class: "flex-1 group relative flex justify-center py-2 px-4 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200" %>
      </div>
    <% end %>
  </div>
</div>